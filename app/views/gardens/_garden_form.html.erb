<%= form_for @garden do |f| %>
  <!-- garden -->
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="large-6 columns">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    </div>
  </div>
  <!-- garden_plant -->
  <%= f.fields_for :plants do |plant| %>
    <%= plant.select :name %>
  <% end %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>
